  "dependencies": {},
  "devDependencies": {
    "bower": "~1.7.9",
    "karma": "~0.12.0",
    "karma-jasmine": "~0.3.0",
    "karma-junit-reporter": "*",
    "karma-coverage": "*",
    "karma-phantomjs-launcher": "*",
    "phantomjs-prebuilt": "*",
    "jasmine-core": "~2.3.4",
    "jsdoc": "~3.4.0",
    "handlebars": "^4.0.5",
	"npm-watch": "*"
  },
  "engine": "node >= 0.8",
  "scripts": {
      "build": "make -C .. build-core build-apps",
      "watch": "npm-watch"
  },
  "watch": {
      "build": {
          "patterns": [
              "../core/js/**/*.{js,handlebars}",
              "../apps/*/js/**/*.{js,handlebars}",
              "../settings/js/**/*.{js,handlebars}"
          ],
          "ignore": "**/*.handlebars.js",
          "extensions": "js,handlebars"
      }
  }
